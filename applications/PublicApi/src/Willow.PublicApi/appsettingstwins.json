{
  "ReverseProxy": {
    "Routes": {
      "Twins-Query": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/twins",
          "Methods": [
            "POST"
          ]
        },
        "AuthorizationPolicy": "TwinsRead",
        "Transforms": [
          {
            "PathPattern": "/twins"
          }
        ]
      },
      "Twins-Multi": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/twins/ids",
          "Methods": [
            "POST"
          ]
        },
        "AuthorizationPolicy": "TwinsRead",
        "Transforms": [
          {
            "PathPattern": "/twins/ids"
          },
          {
            "TwinIdBody": ""
          }
        ]
      },
      "Twins-Single": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/twins/{id}",
          "Methods": [
            "GET"
          ]
        },
        "AuthorizationPolicy": "TwinsRead",
        "Transforms": [
          {
            "PathPattern": "/twins/{id}"
          },
          {
            "TwinIdRoute": "id"
          }
        ]
      },
      "Twins-Outgoing-Relationships": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/twins/{twinid}/relationships/outgoing",
          "Methods": [
            "GET"
          ]
        },
        "AuthorizationPolicy": "TwinsRead",
        "Transforms": [
          {
            "PathPattern": "/twins/{twinid}/relationships"
          },
          {
            "TwinIdRoute": "twinid"
          }
        ]
      },
      "Twins-Incoming-Relationships": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/twins/{twinid}/relationships/incoming",
          "Methods": [
            "GET"
          ]
        },
        "AuthorizationPolicy": "TwinsRead",
        "Transforms": [
          {
            "PathPattern": "/twins/{twinid}/relationships/incoming"
          },
          {
            "TwinIdRoute": "twinid"
          }
        ]
      },
      "Twins-Single-Relationship": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/twins/{twinid}/relationships/{relationshipid}",
          "Methods": [
            "GET"
          ]
        },
        "AuthorizationPolicy": "TwinsRead",
        "Transforms": [
          {
            "PathPattern": "/twins/{twinid}/relationship/{relationshipid}"
          },
          {
            "TwinIdRoute": "twinid"
          }
        ]
      },
      "Put-Twins": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/twins",
          "Methods": [ "PUT" ]
        },
        "AuthorizationPolicy": "TwinsWrite",
        "Transforms": [
          {
            "PathPattern": "/twins"
          }
        ]
      },
      "Patch-Twins": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/twins/{id}",
          "Methods": [ "PATCH" ]
        },
        "AuthorizationPolicy": "TwinsWrite",
        "Transforms": [
          {
            "PathPattern": "/twins/{id}"
          },
          {
            "TwinIdRoute": "id"
          }
        ]
      },
      "Models-Multi": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/models",
          "Methods": [
            "GET"
          ]
        },
        "AuthorizationPolicy": "ModelsRead",
        "Transforms": [
          {
            "PathPattern": "/models"
          }
        ]
      },
      "Models-Single": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/models/{id}",
          "Methods": [
            "GET"
          ]
        },
        "AuthorizationPolicy": "ModelsRead",
        "Transforms": [
          {
            "PathPattern": "/models/{id}"
          }
        ]
      },
      "Put-Relationships": {
        "ClusterId": "Twins",
        "Match": {
          "Path": "/v3/twins/relationships",
          "Methods": [ "PUT" ]
        },
        "AuthorizationPolicy": "TwinsWrite",
        "Transforms": [
          {
            "PathPattern": "/relationships"
          },
          {
            "TwinIdBody": "$sourceId"
          },
          {
            "TwinIdBody": "$targetId"
          }
        ]
      }
    },
    "Clusters": {
      "Twins": {
        "Destinations": {
          "TwinsAPI": {
            "Address": "http://adt-api",
            "Swaggers": [
              {
                "PrefixPath": "",
                "AddOnlyPublishedPaths": true,
                "Paths": [
                  "/swagger/v1/swagger.json"
                ]
              }
            ]
          }
        },
        "Metadata": {
          "IsCoreService": "true",
          "HealthCheck": "Federated"
        }
      }
    }
  }
}
