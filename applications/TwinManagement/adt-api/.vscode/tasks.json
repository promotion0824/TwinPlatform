{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-ADT-API",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Willow.AzureDigitalTwins.Api/Willow.AzureDigitalTwins.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-ADT-API",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/Willow.AzureDigitalTwins.Api/Willow.AzureDigitalTwins.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch-ADT-API",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Willow.TwinLifecycleManagement.Web/Willow.AzureDigitalTwins.Api.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-TLM",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Willow.TwinLifecycleManagement.Web/Willow.TwinLifecycleManagement.Web.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
  ]
}