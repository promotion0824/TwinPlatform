{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Willow.AzureDigitalTwins.Api",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-ADT-API",
      "program": "${workspaceFolder}/adt-api/Willow.AzureDigitalTwins.Api/bin/Debug/net8.0/Willow.AzureDigitalTwins.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/adt-api/Willow.AzureDigitalTwins.Api",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+http://\\S+:([0-9]+)",
        "uriFormat": "http://localhost:%s/swagger/index.html"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "requireExactSource": true
    },
    {
      "name": "Willow.TwinLifecycleManagement.Web",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-TLM",
      "program": "${workspaceFolder}/tlm/Willow.TwinLifecycleManagement.Web/bin/Debug/net8.0/Willow.TwinLifecycleManagement.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/tlm/Willow.TwinLifecycleManagement.Web",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "requireExactSource": true
    }
  ],
  "compounds": [
    {
      "name": "TLM with ADT API",
      "configurations": [
        "Willow.AzureDigitalTwins.Api",
        "Willow.TwinLifecycleManagement.Web"
      ],
      "stopAll": true
    }
  ]
}