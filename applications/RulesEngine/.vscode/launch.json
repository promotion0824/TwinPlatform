{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Generate typescript client",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/APIClientGenerator/bin/Debug/net8.0/APIClientGenerator.dll",
      "args": [],
      "cwd": "${workspaceFolder}/APIClientGenerator",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": "Generate C# client for Command",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/APIClientGenerator/bin/Debug/net8.0/APIClientGenerator.dll",
      "args": ["PublicApi.json", "WillowRules\\Generated\\Command.cs", "CSharp"],
      "cwd": "${workspaceFolder}/APIClientGenerator",
      "console": "internalConsole"
    },
    {
      "name": "RulesEngine.Web",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/RulesEngine.Web/bin/Debug/net8.0/RulesEngine.Web.dll",
      "args": [
        "--urls",
        "http://localhost:5050"
      ],
      "cwd": "${workspaceFolder}/RulesEngine.Web",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5050;"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "requireExactSource": false
    },
    {
      "name": "RulesEngine.Processor",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/RulesEngine.Processor/bin/Debug/net8.0/RulesEngine.Processor.dll",
      "args": [
        "--urls",
        "http://localhost:5051"
      ],
      "cwd": "${workspaceFolder}/RulesEngine.Processor",
      "stopAtEntry": false,
      "env": {
        "DOTNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5051;"
      }
    },
    {
      "name": "RulesEngine.Init",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/RulesEngine.Init/bin/Debug/net8.0/RulesEngine.Init.dll",
      "args": [
        "--urls",
        "http://localhost:5052"
      ],
      "cwd": "${workspaceFolder}/RulesEngine.Init",
      "stopAtEntry": false,
      "env": {
        "DOTNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5052;"
      }
    },
    {
      "name": "RulesEngine Processor Release Docker",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: RulesEngine.Processor release",
      "netCore": {
        "appProject": "${workspaceFolder}/RulesEngine.Processor/RulesEngine.Processor.csproj"
      }
    }
  ],
  "compounds": [
    {
      "name": "Run Solution",
      "configurations": [
        "RulesEngine.Processor",
        "RulesEngine.Web"
      ],
      "preLaunchTask": "build",
      "stopAll": true
    }
  ]
}