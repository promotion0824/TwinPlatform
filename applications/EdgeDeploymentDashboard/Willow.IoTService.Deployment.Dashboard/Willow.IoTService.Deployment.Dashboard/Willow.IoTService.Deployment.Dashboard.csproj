<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <InvariantGlobalization>false</InvariantGlobalization>
    <SpaRoot>..\deployment-dashboard-webui</SpaRoot>
    <SpaProxyServerUrl>http://localhost:3000</SpaProxyServerUrl>
    <SpaProxyLaunchCommand>npm start</SpaProxyLaunchCommand>
    <ImplicitUsings>enable</ImplicitUsings>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <UserSecretsId>7ad90fc7-97a1-44c6-aeec-ca5fb8a427b6</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Authorization.TwinPlatform.Common" Version="2.2.2676" />
    <PackageReference Include="FluentValidation.AspNetCore" Version="11.3.0" />
    <PackageReference Include="MassTransit.Azure.ServiceBus.Core" Version="8.2.3" />
    <PackageReference Include="MediatR" Version="12.3.0" />
    <PackageReference Include="MicroElements.Swashbuckle.FluentValidation" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.6" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning" Version="5.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning.ApiExplorer" Version="5.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.SpaProxy" Version="8.0.6">
      <Version>8.*-*</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="8.0.0" />
    <PackageReference Include="Microsoft.Identity.Web" Version="2.19.1" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.6" />
    <PackageReference Include="Swashbuckle.AspNetCore.Annotations" Version="6.6.2" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.6">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="StyleCop.Analyzers" PrivateAssets="all" IncludeAssets="runtime; build; native; contentfiles; analyzers; buildtransitive" Version="1.2.0-beta.556"/>
    <PackageReference Include="Willow.Hosting" Version="2.2.2734" />
    <PackageReference Include="Willow.Telemetry" Version="2.2.2734" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Willow.IoTService.Deployment\Willow.IoTService.Deployment.DataAccess.DependencyInjection\Willow.IoTService.Deployment.DataAccess.DependencyInjection.csproj" />
    <ProjectReference Include="..\..\Willow.IoTService.Deployment\Willow.IoTService.Deployment.DataAccess\Willow.IoTService.Deployment.DataAccess.csproj" />
    <ProjectReference Include="..\..\Willow.IoTService.Deployment\Willow.IoTService.Deployment.ManifestStorage.Hosting\Willow.IoTService.Deployment.ManifestStorage.Hosting.csproj" />
    <ProjectReference Include="..\Willow.IoTService.Deployment.Dashboard.Infrastructure\Willow.IoTService.Deployment.Dashboard.Infrastructure.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\deployment-dashboard-webui\Willow.deploymentdashboard.webui.esproj">
      <Targets>Publish</Targets>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Content Update="usermanagement.import.nonprd.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="usermanagement.import.prd.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
