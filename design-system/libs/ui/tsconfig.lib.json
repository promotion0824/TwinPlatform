{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    // rollup needs to use styled-components babel plugin to support css props.
    // Thus we have to stop changing the jsx file.
    // See details of this answer: https://github.com/styled-components/babel-plugin-styled-components/issues/222#issuecomment-520761885
    "jsx": "preserve"
  },
  "files": [
    "../../node_modules/@nx/react/typings/cssmodule.d.ts",
    "../../node_modules/@nx/react/typings/image.d.ts",
    "../../cssprop.d.ts"
  ],
  "exclude": [
    "src/docs/**",
    "src/jest/**",
    "jest.config.ts",
    "**/*.visual.tsx",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
}
