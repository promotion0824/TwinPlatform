{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui/src",
  "projectType": "library",
  "tags": ["ci:build", "ci:publish"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["build-theme"],
      "options": {
        "outputPath": "dist/libs/ui",
        "format": ["esm", "cjs"],
        "tsConfig": "libs/ui/tsconfig.lib.json",
        "project": "libs/ui/package.json",
        "entryFile": "libs/ui/src/index.ts",
        "external": "all",
        "rollupConfig": [
          "@nx/react/plugins/bundle-rollup",
          "libs/ui/rollup.config.js"
        ],
        "compiler": "babel",
        "assets": [
          {
            "glob": "libs/ui/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "babelUpwardRootMode": true
      }
    },
    "build-theme": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run theme:build"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm publish dist/libs/ui"],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/ui/**/*.{ts,tsx,js,jsx,json}",
          "libs/ui/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/ui"],
      "options": {
        "jestConfig": "libs/ui/jest.config.ts"
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/ui/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true,
          "port": 4444
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "configDir": "libs/ui/.storybook",
        "outputDir": "dist/storybook/ui"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-playroom": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["playroom build --config ./libs/ui/playroom.config.js"]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --project libs/ui/tsconfig.lib.json --noEmit",
          "tsc --project libs/ui/tsconfig.spec.json --noEmit",
          "tsc --project libs/ui/tsconfig.storybook.json --noEmit"
        ],
        "parallel": true
      }
    }
  }
}
