{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "View webapp with proxy",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/ClientApp",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "start"
      ]
      // "console": "externalTerminal"
    },
    {
      "name": "Backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net7.0/OntologyGraphTool.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:7070"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ],
  "compounds": [
    {
      "name": "Run Solution",
      "configurations": [
        "View webapp with proxy",
        "Backend"
      ],
      "preLaunchTask": "build",
      "stopAll": true
    }
  ]
}